<div class="container">
  <div>
    <h5>会員情報編集</h5>
  </div>

  <% if @customer.errors.any? %>
  <%= @customer.errors.count %>件のエラーが発生しました
  <ul>
    <% @customer.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
  <% end %>

  <div>
  <%= form_with model: @customer, url: customers_infomation_path(@customer), method: :patch do |f| %>
    <table>
      <tr>
        <td><%= f.label :氏名 %></td>
        <td><%= f.text_field :last_name %></td>
        <td><%= f.text_field :first_name %></td>
      </tr>
      <tr>
        <td><%= f.label :フリガナ %></td>
        <td><%= f.text_field :last_name_kana %></td>
        <td><%= f.text_field :first_name_kana %></td>
      </tr>
      <tr>
        <td><%= f.label :郵便番号 %></td>
        <td><%= f.text_field :postal_code %></td>
      </tr>
      <tr>
        <td><%= f.label :住所 %></td>
        <td><%= f.text_field :address %></td>
      </tr>
      <tr>
        <td><%= f.label :電話番号 %></td>
        <td><%= f.text_field :telephone_number %></td>
      </tr>
      <tr>
        <td><%= f.label :メールアドレス %></td>
        <td><%= f.text_field :email %></td>
      </tr>
    </table>

    <div>
      <%= f.submit "編集内容を保存", class: 'btn btn-success btn-sm' %>
      <%= link_to "退会する", customers_unsubscribe_path, class: 'btn btn-danger btn-sm' %>
    </div>
  <% end %>
  </div>
</div>