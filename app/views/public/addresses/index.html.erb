<div>
  <h5>配送先登録 / 一覧</h5>
</div>

<div>
  <%= form_with model: @address, url: 'addresses', method: :post do |f| %>
    <div>
      <%= f.label :"郵便番号(ハイフンなし)" %>
      <%= f.text_field :postal_code %>
    </div>
    <div>
      <%= f.label :住所 %>
      <%= f.text_field :address %>
    </div>
    <div>
      <%= f.label :宛名 %>
      <%= f.text_field :name %>
      <%= f.submit "新規登録", class:"btn btn-success" %>
    </div>
  <% end %>
</div>

<div>
  <table>
    <thead>
      <tr>
        <td>郵便番号</td>
        <td>住所</td>
        <td>宛名</td>
        <td></td>
      </tr>
    </thead>
    <tbody>
      <% @addresses.each do |address| %>
      <tr>
        <td><%= address.postal_code %></td>
        <td><%= address.address %></td>
        <td><%= address.name %></td>
        <td>
          <%= link_to "編集", addresses_path(address.id), class:"btn btn-success" %>
          <%= link_to "削除", addresses_path(address.id), method: :delete, class:"btn btn-danger" %>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>

