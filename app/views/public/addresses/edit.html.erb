<div class="container">
  <h3 class="mt-5 ml-5">配送先編集</h3>

  <% if @address.errors.any? %>
      <%= @address.errors.count %>件のエラーが発生しました
      <ul>
        <% @address.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    <% end %>

  <%= form_with model: @address, url: address_path(@address), method: :patch do |f| %>
  <div class="form-group mt-4">
    <table class="table table-borderless">
      <tr>
        <td class="col-3"><%= f.label :"郵便番号(ハイフンなし)" %></td>
        <td class="col-5"><%= f.text_field :postal_code, class: "form-control" %></td>
      </tr>
      <tr>
        <td class="col-3"><%= f.label :住所 %></td>
        <td class="col-5"><%= f.text_field :address, class: "form-control" %></td>
      </tr>
      <tr>
        <td class="col-3"><%= f.label :宛名 %></td>
        <td class="col-5"><%= f.text_field :name, class: "form-control" %></td>
        <td><%= f.submit "変更内容を保存", class:"btn btn-success btn-sm" %></td>
      </tr>
    </table>
  </div>
  <% end %>
</div>