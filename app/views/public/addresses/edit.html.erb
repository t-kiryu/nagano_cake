<div>
  <h5>配送先編集</h1>
</div>

<%= form_with model: @address, url: address_path(@address), method: :patch do |f| %>
  <div>
    <%= f.label :"郵便番号(ハイフンなし)" %>
    <%= f.text_field :postal_code %>
  </div>
  <div>
    <%= f.label :住所 %>
    <%= f.text_field :address %>
  </div>
  <div>
    <%= f.label :宛名 %>
    <%= f.text_field :name %>
    <%= f.submit "変更内容を保存", class: "btn btn-success btn-sm" %>
  </div>
<% end %>