<div>
  <h1>注文履歴一覧</h1>
</div>

<div>
  <table>
    <thead>
      <tr>
        <td>注文日</td>
        <td>配送先</td>
        <td>注文商品</td>
        <td>支払金額</td>
        <td>ステータス</td>
        <td>注文詳細</td>
      </tr>
    </thead>
    <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= order.created_at.strftime('%Y/%m/%d') %></td>
        <td>
          〒<%= order.postal_code %></br>
          <%= order.address %></br>
          <%= order.name %>
        </td>
        <td>
          <% order.order_details.each do |order_detail| %>
            <%= order_detail.item.name %>
          <% end %>
        </td>
        <td><%= (order.shipping_cost + order.total_price).to_s(:delimited) %></td>
        <td><%= order.status %></td>
        <td><%= link_to "表示する", order_path(order.id), class: 'btn btn-primary btn-sm' %></td>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>