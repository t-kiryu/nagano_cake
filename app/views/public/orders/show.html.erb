<div>
  <h1>注文履歴詳細</h1>
</div>

<div>
  <div>
    <h3>注文情報</h3>
    <table>
      <tbody>
        <tr>
          <td>注文日</td>
          <td><%= @order.created_at.strftime('%Y/%m/%d') %></td>
        </tr>
        <tr>
          <td>配送先</td>
          <td>
            〒<%#= @order.postal_code %></br>
            <%#= @order.address %></br>
            <%#= @order.name %>
          </td>
        </tr>
        <tr>
          <td>支払方法</td>
          <td><%#= @order.payment_method %></td>
        </tr>
        <tr>
          <td>ステータス</td>
          <td><%#= @order.status %></td>
        </tr>
      </tbody>
    </table>
  </div>

  <div>
    <h3>請求情報</h3>
    <table>
      <tbody>
        <tr>
          <td>商品合計</td>
          <td><%#= @order.total_price.to_s(:delimited) %></td>
        </tr>
        <tr>
          <td>配送料</td>
          <td><%#= @order.shipping_cost.to_s(:delimited) %></td>
        </tr>
        <tr>
          <td>ご請求額</td>
          <td><%#= (@order.shipping_cost + @order.total_price).to_s(:delimited) %></td>
        </tr>
      </tbody>
    </table>
  </div>

  <div>
    <h3>注文内容</h3>
    <div>
      <table>
        <thead>
          <tr>
            <td>商品</td>
            <td>単価(税込)</td>
            <td>個数</td>
            <td>小計</td>
          </tr>
        </thead>
        <tbody>
        <%#= @orders.each do |order| %>
          <tr>
            <td><%#= @order.item.name %></td>
            <td><%#= @order.item.with_tax_price.to_s(:delimited) %></td>
            <td><%#= @order.item.amount %></td>
            <td><%#= @order.cart_item.subtotal.to_s(:delimited) %></td>
          </tr>
        <%# end %>
        </tbody>
      </table>
    </div>
  </div>
</div>