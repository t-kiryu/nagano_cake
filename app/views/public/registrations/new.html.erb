<div>
  <h5>新規会員登録</h5>
</div>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
<%= render "public/shared/error_messages", resource: resource %>

  <table>
    <tr>
      <td>名前</td>
      <td>(性)</td>
      <td><%= f.text_field :last_name, autofocus: true %></td>
      <td>(名)</td>
      <td><%= f.text_field :first_name %></td>
    </tr>

    <tr>
      <td>フリガナ</td>
      <td>(セイ)</td>
      <td><%= f.text_field :last_name_kana %></td>
      <td>(メイ)</td>
      <td><%= f.text_field :first_name_kana %></td>
    </tr>

    <tr>
      <td>メールアドレス</td>
      <td></td>
      <td><%= f.email_field :email, autofocus: true, autocomplete: "email" %></td>
    </tr>

    <tr>
      <td>郵便番号(ハイフンなし)</td>
      <td></td>
      <td><%= f.text_field :postal_code %></td>
    </tr>

    <tr>
      <td>住所</td>
      <td></td>
      <td colspan=3><%= f.text_field :address %></td>
    </tr>

    <tr>
      <td>電話番号(ハイフンなし)</td>
      <td></td>
      <td><%= f.text_field :telephone_number %></td>
    </tr>

    <tr>
      <td>パスワード(6文字以上)</td>
      <td></td>
      <td><%= f.password_field :password, autocomplete: "new-password" %></td>
    </tr>

    <tr>
      <td>パスワード(確認用)</td>
      <td></td>
      <td><%= f.password_field :password_confirmation, autocomplete: "new-password" %></td>
    </tr>

    <tr>
      <td></td>
      <td></td>
      <td><%= f.submit "新規登録" %></td>
      <td></td>
      <td></td>
    </tr>
  </table>
<% end %>

<h5>既に登録済みの方</h5>
<p><%= link_to "こちら　", new_customer_session_path %>からログインしてください。</p>