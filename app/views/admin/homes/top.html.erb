<div class="container">
  <div class="row">
    <div class="col-12">
      <h3 class="mt-5">注文履歴一覧</h3>
      <div class="form-group col-10 mx-auto mt-4">
        <table class="table table-hover">
          <thead class="thead-dark">
            <tr>
              <th>購入日時</th>
              <th>購入者</th>
              <th>注文個数</th>
              <th>注文ステータス</th>
            </tr>
          </thead>
          <tbody>
            <% @orders.each do |order| %>
            <tr>
              <td>
                <%= link_to admin_order_path(order) do %>
                  <%= l order.created_at %>
                <% end %>
              </td>
              <td><%= order.name %></td>
              <td><%= order.order_details.sum(:amount) %></td>
              <td><%= order.status %></td>
            </tr>
            <% end %>
          </tbody>
        </table>
      </div>
      <div class="page navigation">
        <ul class="pagination justify-content-center">
          <li class="page-link"><%= paginate @orders %></li>
        </ul>
      </div>
    </div>
  </div>
</div>