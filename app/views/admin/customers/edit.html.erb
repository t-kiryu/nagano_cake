<div>
  <h5><%= @customer.last_name + @customer.first_name %>さんの会員情報編集</h5>
</div>

<% if @customer.errors.any? %>
  <%= @customer.errors.count %>件のエラーが発生しました
  <ul>
    <% @customer.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<div>
  <%= form_with model: @customer, url: admin_customer_path(@customer.id), method: :patch do |f| %>
  <table>
    <tr>
      <td><%= f.label :会員ID %></td>
      <td><%=@customer.id %> </td>
    </tr>
    <tr>
      <td><%= f.label :氏名 %></td>
      <td><%= f.text_field :last_name %></td>
      <td><%= f.text_field :first_name %></td>
    </tr>
    <tr>
      <td><%= f.label :フリガナ %></td>
      <td><%= f.text_field :last_name_kana %></td>
      <td><%= f.text_field :first_name_kana %></td>
    </tr>
    <tr>
      <td><%= f.label :郵便番号 %></td>
      <td><%= f.text_field :postal_code %></td>
    </tr>
    <tr>
      <td><%= f.label :住所 %></td>
      <td><%= f.text_field :address %></td>
    </tr>
    <tr>
      <td><%= f.label :電話番号 %></td>
      <td><%= f.text_field :telephone_number %></td>
    </tr>
    <tr>
      <td><%= f.label :メールアドレス %></td>
      <td><%= f.text_field :email %></td>
    </tr>
    <tr>
      <td><%= f.label :会員ステータス %></td>
      <td>
        <%= f.radio_button :is_deleted, "有効" %>
        <%= f.label :is_deleted, "有効" %>

        <%= f.radio_button :is_deleted, "退会" %>
        <%= f.label :is_deleted, "退会" %>
      </td>
    </tr>
    <tr>
      <td></td>
      <td><%= f.submit "変更を保存" %></td>
    </tr>
  </table>
  <% end %>
</div>