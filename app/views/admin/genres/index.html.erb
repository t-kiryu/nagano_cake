  <div class="container">
    <h3 class="mt-5 ml-5 pl-5">ジャンル一覧・追加</h3>
    <% if @genre.errors.any? %>
      <div id="error_explanation">
        <h3><%= @genre.errors.count %> errors prohibited this obj from being saved:</h3>
        <ul>
          <% @genre.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
    <div class="col-12 mt-5">
      <div class="form-group col-10">
        <%= form_with model: @genre, url: '/admin/genres', method: :post do |f| %>
          <table class="table table-borderless col-7">
            <tr>
              <td><%= f.label :ジャンル名 %></td>
              <td><%= f.text_field :name, placeholder: "ジャンル名" %></td>
              <td><%= f.submit '新規登録', class: 'btn btn-success btn-sm' %></td>
            </tr>
          </table>
        <% end %>
      </div>
      <div class="form-group col-4 mt-5">
        <table class="table table-hover table-sm">
          <thead class="thead-dark">
            <tr>
              <th>ジャンル</th>
              <th></th>
            </tr>
          </thead>
          <tbody>
            <% @genres.each do |genre| %>
            <tr>
              <td class="d-flex align-items-center"><%= genre.name %></td>
              <td class=" text-center"><%= link_to "編集する", edit_admin_genre_path(genre.id), class: 'btn btn-success btn-sm' %></td>
            </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>