<div>
  <div>
    <h1>ジャンル編集</h1>
  </div>

  <div>
    <div class="form-group">
    <%= form_with model: @genre, url: admin_genre_path(@genre.id), method: :patch do |f| %>
      <%= f.label :ジャンル名 %>
      <%= f.text_field :name %>
      <%= f.submit "変更を保存", class: 'btn btn-success' %>
    <% end %>
    </div>
  </div>
</div>