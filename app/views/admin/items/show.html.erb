<div class="container">
  <div class="row">
    <h3 class="mt-5">商品詳細</h3>
    <div class="col-2 my-auto pt-5 mr-4">
      <% if @item.image.attached? %>
        <%= image_tag @item.image, size: "200x180" %>
      <% else %>
        <%= image_tag "no_image", size: "200x180" %>
      <% end %>
    </div>
    <div class="col-6 mt-5 pt-5 ml-5">
      <table class="table table-borderless border-sm">
        <tr>
          <td class="col-2">商品名</td>
          <td class="col-4"><%= @item.name %></td>
        </tr>
        <tr>
          <td class="col-2">商品説明</td>
          <td class="col-4"><%= @item.introduction %></td>
        </tr>
        <tr>
          <td class="col-2">ジャンル</td>
          <td class="col-4"><%= @item.genre.name %></td>
        </tr>
        <tr>
          <td class="col-2">税込価格<br>(税抜価格)</td>
          <td class="col-4"><%= @item.with_tax_price.to_s(:delimited) %>(<%= @item.price.to_s(:delimited) %>)円</td>
        </tr>
        <tr>
          <td class="col-2">販売ステータス</td>
          <td class="col-4"><%= @item.is_active%></td>
        </tr>
      </table>
      <div class="text-center">
        <%= link_to "編集する", edit_admin_item_path(@item.id), class: 'btn btn-success' %>
      </div>
    </div>
  </div>
</div>