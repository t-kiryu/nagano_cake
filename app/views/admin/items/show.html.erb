<h1>商品詳細</h1>

<div class="form-group">
  <% if @item.image.attached? %>
    <%= image_tag item.image, size: "200x200" %>
  <% else %>
    <%= image_tag "no_image", size: "200x200" %>
  <% end %>
</div>

<table>
  <tr>
    <td>商品名</td>
    <td><%= @item.name %></td>
  </tr>

  <tr>
    <td>商品説明</td>
    <td><%= @item.introduction %></td>
  </tr>

  <tr>
    <td>ジャンル</td>
    <td><%= @item.genre.name %></td>
  </tr>

  <tr>
    <td>
      税込価格<br>(税抜価格)
    </td>
    <td>
      <%= @item.with_tax_price.to_s(:delimited) %>(<%= @item.price.to_s(:delimited) %>)円
    </td>
  </tr>

  <tr>
    <td>販売ステータス</td>
    <td><%= @item.is_active %></td>
  </tr>
</table>

<div class="form-group">
  <%= link_to "編集する", edit_admin_item_path(@item.id) %>
</div>
