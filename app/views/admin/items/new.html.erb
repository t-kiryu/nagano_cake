<div class="container">
  <div class="row">
    <div class="col-12">
      <div class="ml-5 pl-5 mt-5">
        <h3>商品新規登録</h3>
      </div>
      <div id="error_explanation">
        <% if @item.errors.any? %>
          <div id="error_explanation">
            <h3><%= @item.errors.count %> errors prohibited this obj from being saved:</h3>
            <ul>
              <% @item.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>
      </div>
      <div class="form-group mx-auto col-7 mt-4">
        <%= form_with model: @item, url: '/admin/items', method: :post do |f| %>
        <table class="table table-borderless table-sm">
          <tr>
            <td><%= f.label :商品画像 %></td>
            <td><%= f.file_field :image, accept: "image/*" %></td>
          </tr>
          <tr>
            <td><%= f.label :商品名 %></td>
            <td><%= f.text_field :name, placeholder: "商品名", class: "form-control" %></td>
          </tr>
          <tr>
            <td><%= f.label :商品説明 %></td>
            <td><%= f.text_area :introduction, placeholder: "ここに説明文を記述します", class: "form-control" %></td>
          </tr>
          <tr>
            <td><%= f.label :ジャンル %></td>
            <td><%= f.select :genre_id, options_from_collection_for_select(Genre.all, :id, :name), prompt: "-- 選択してください --" %></td>
          </tr>
          <tr>
            <td><%= f.label :税抜価格 %></td>
            <td><%= f.text_field :price, placeholder: "1000", class: "form-control" %>円</td>
          </tr>
          <tr>
            <td>
              <%= f.label :販売ステータス %>
            </td>
            <td>
              <%= f.radio_button :is_active, "販売中" %>
              <%= f.label :is_active, "販売中" %>

              <%= f.radio_button :is_active, "売切れ" %>
              <%= f.label :is_active, "売切れ" %>
            </td>
          </tr>
        </table>
        <div class="text-center">
          <%= f.submit "新規登録", class: 'btn btn-success' %>
        </div>
        <% end %>
      </div>
    </div>
  </div>
</div>