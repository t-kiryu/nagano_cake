<div class="container">
  <div class="col-12">
    <h3 class="mx-auto mt-5">管理者ログイン</h3>
  </div>
  <div class="form-group col-10 mt-4">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <table class="table table-borderless table-sm">
      <tr>
        <td><%= f.label :メールアドレス %></td>
        <td><%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "sample@example.com", class: "form-control" %></td>
      </tr>
        <tr>
        <td><%= f.label :パスワード %></td>
        <td><%= f.password_field :password, autocomplete: "current-password", class: "form-control" %></td>
      </tr>
        <tr>
        <td></td>
        <td><%= f.submit "ログイン", class: 'btn btn-primary' %></td>
      </tr>
    </table>
    <% end %>
  </div>
<%= render "admin/shared/links" %>
</div>